{
	"name": "pln_copy_mipins",
	"properties": {
		"activities": [
			{
				"name": "Create the table lookup",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Truncate logging table",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "JsonSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "JsonWriteSettings"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "ds_odw_mipins_load_tables",
						"type": "DatasetReference",
						"parameters": {
							"source_schema_name": "odw",
							"source_table_name": "load_tables"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "ds_odw_mipins_config",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Lookup MiPINS table list",
				"type": "Lookup",
				"dependsOn": [
					{
						"activity": "Create the table lookup",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"dataset": {
						"referenceName": "ds_odw_mipins_config",
						"type": "DatasetReference"
					},
					"firstRowOnly": false
				}
			},
			{
				"name": "Copy MiPINS to ODW",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "Lookup MiPINS table list",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('Lookup MiPINS table list').output.value",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "OnError",
							"type": "Script",
							"dependsOn": [
								{
									"activity": "Copy tables to ODW_csv",
									"dependencyConditions": [
										"Failed"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"linkedServiceName": {
								"referenceName": "ls_odw_sql_mipins",
								"type": "LinkedServiceReference"
							},
							"typeProperties": {
								"scripts": [
									{
										"parameters": [
											{
												"name": "TableName",
												"type": "String",
												"value": {
													"value": "@item().TableName",
													"type": "Expression"
												},
												"direction": "Input"
											}
										],
										"type": "NonQuery",
										"text": "INSERT INTO Audit.SynapseLogging (TableName, Flag)\nVALUES (@TableName,'Error');"
									}
								]
							}
						},
						{
							"name": "Copy tables to ODW_csv",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "AzureSqlSource",
									"queryTimeout": "02:00:00",
									"partitionOption": "None"
								},
								"sink": {
									"type": "DelimitedTextSink",
									"storeSettings": {
										"type": "AzureBlobFSWriteSettings"
									},
									"formatSettings": {
										"type": "DelimitedTextWriteSettings",
										"quoteAllText": true,
										"fileExtension": ".txt"
									}
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"typeConversion": true,
									"typeConversionSettings": {
										"allowDataTruncation": true,
										"treatBooleanAsNumber": false
									}
								}
							},
							"inputs": [
								{
									"referenceName": "ds_odw_mipins_load_tables",
									"type": "DatasetReference",
									"parameters": {
										"source_schema_name": {
											"value": "@item().SchemaName",
											"type": "Expression"
										},
										"source_table_name": {
											"value": "@item().TableName",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "ds_odw_mipins_tables_csv",
									"type": "DatasetReference",
									"parameters": {
										"LandingContainer": {
											"value": "@item().LandingContainer",
											"type": "Expression"
										},
										"LandingFolder": {
											"value": "@item().LandingFolder",
											"type": "Expression"
										},
										"Filename": {
											"value": "@concat(item().Filename,'.csv')",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			},
			{
				"name": "Truncate logging table",
				"type": "Script",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"linkedServiceName": {
					"referenceName": "ls_odw_sql_mipins",
					"type": "LinkedServiceReference",
					"parameters": {
						"db_name": "MiPINS-PRD-ISS"
					}
				},
				"typeProperties": {
					"scripts": [
						{
							"type": "NonQuery",
							"text": "TRUNCATE table Audit.SynapseLogging ;"
						}
					]
				}
			}
		],
		"folder": {
			"name": "a-resources/mipins"
		},
		"annotations": [],
		"lastPublishTime": "2023-01-19T13:06:16Z"
	},
	"type": "Microsoft.Synapse/workspaces/pipelines"
}