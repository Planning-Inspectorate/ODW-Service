{
	"name": "pln_backup_odw_curated",
	"properties": {
		"activities": [
			{
				"name": "backup_odw_curated",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "odw-curated//"
					},
					{
						"name": "Destination",
						"value": "odw-curated//"
					}
				],
				"typeProperties": {
					"source": {
						"type": "BinarySource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"wildcardFileName": "*"
						},
						"formatSettings": {
							"type": "BinaryReadSettings"
						}
					},
					"sink": {
						"type": "BinarySink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings",
							"copyBehavior": "PreserveHierarchy"
						}
					},
					"enableStaging": false,
					"preserve": [
						"ACL",
						"Owner",
						"Group",
						"Attributes"
					],
					"enableSkipIncompatibleRow": false,
					"skipErrorFile": {
						"fileMissing": true,
						"dataInconsistency": true
					},
					"validateDataConsistency": true,
					"logSettings": {
						"enableCopyActivityLog": true,
						"copyActivityLogSettings": {
							"logLevel": "Warning",
							"enableReliableLogging": true
						},
						"logLocationSettings": {
							"linkedServiceName": {
								"referenceName": "ls_backup_source",
								"type": "LinkedServiceReference"
							},
							"path": "backup-logs"
						}
					}
				},
				"inputs": [
					{
						"referenceName": "bkp_src_odw_curated",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "bkp_dst_odw_curated",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}
