{
	"name": "Timesheets_calendar",
	"properties": {
		"description": "copy timesheets calendar data",
		"activities": [
			{
				"name": "Timesheeta_Calendar",
				"description": "Import of timesheets.calendar data into ODW Raw layer",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "timesheets.calendar"
					},
					{
						"name": "Destination",
						"value": "odw-raw/@{concat('Timesheets', '/', formatDateTime(utcnow(), 'yyyy-MM-dd'))}/@{'<FileName>'}"
					}
				],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "Timesheets_Calendar",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "Timesheets_Data",
						"type": "DatasetReference",
						"parameters": {
							"Filename": "Calendar.csv"
						}
					}
				]
			}
		],
		"folder": {
			"name": "Timesheet Data"
		},
		"annotations": []
	}
}