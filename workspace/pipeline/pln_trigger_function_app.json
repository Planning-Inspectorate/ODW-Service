{
	"name": "pln_trigger_function_app",
	"properties": {
		"activities": [
			{
				"name": "Trigger Function",
				"type": "WebActivity",
				"dependsOn": [
					{
						"activity": "Get Function URL Secret",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"method": "GET",
					"url": {
						"value": "@replace(activity('Get Function URL Secret').output.status.Output.result.exitValue, ' ', '')",
						"type": "Expression"
					},
					"connectVia": {
						"referenceName": "AutoResolveIntegrationRuntime",
						"type": "IntegrationRuntimeReference"
					}
				}
			},
			{
				"name": "Get Function URL Secret",
				"type": "SynapseNotebook",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"notebook": {
						"referenceName": "py_utils_get_key_vault_secret",
						"type": "NotebookReference"
					},
					"parameters": {
						"secret_name": {
							"value": {
								"value": "@concat('function-url-', replace(pipeline().parameters.function_name, '-', ''))",
								"type": "Expression"
							},
							"type": "string"
						}
					},
					"snapshot": true,
					"conf": {
						"spark.dynamicAllocation.enabled": null,
						"spark.dynamicAllocation.minExecutors": null,
						"spark.dynamicAllocation.maxExecutors": null
					},
					"numExecutors": null
				}
			},
			{
				"name": "New Messages",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "Trigger Function",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "pipelineReturnValue",
					"value": [
						{
							"key": "Messages",
							"value": {
								"type": "Expression",
								"content": "@activity('Trigger Function').output.count"
							}
						}
					],
					"setSystemVariable": true
				}
			},
			{
				"name": "No New Messages",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "Trigger Function Failure",
						"dependencyConditions": [
							"Completed"
						]
					}
				],
				"policy": {
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "pipelineReturnValue",
					"value": [
						{
							"key": "Messages",
							"value": {
								"type": "Int",
								"content": 0
							}
						}
					],
					"setSystemVariable": true
				}
			},
			{
				"name": "Trigger Function Failure",
				"type": "Fail",
				"dependsOn": [
					{
						"activity": "Trigger Function",
						"dependencyConditions": [
							"Failed"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"message": "Trigger Function has failed",
					"errorCode": "Trigger Function has failed"
				}
			}
		],
		"parameters": {
			"function_name": {
				"type": "string"
			}
		},
		"folder": {
			"name": "utils"
		},
		"annotations": []
	}
}