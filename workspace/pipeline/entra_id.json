{
	"name": "entra_id",
	"properties": {
		"activities": [
			{
				"name": "Copy AAD Users",
				"description": "Calls the Entra ID and retrieves a list of the users and their attributes",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "RestSource",
						"httpRequestTimeout": "00:01:40",
						"requestInterval": "00.00:00:00.010",
						"requestMethod": "GET",
						"paginationRules": {
							"AbsoluteUrl": "$['@odata.nextLink']"
						}
					},
					"sink": {
						"type": "JsonSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "JsonWriteSettings",
							"filePattern": "arrayOfObjects"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "ds_entra_id",
						"type": "DatasetReference",
						"parameters": {
							"query": "users?$select=surname,givenName,userPrincipalName,id,employeeId"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "entra_id_users",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Logging Failed Activities Copied",
				"type": "SynapseNotebook",
				"dependsOn": [
					{
						"activity": "Copy AAD Users",
						"dependencyConditions": [
							"Failed"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"notebook": {
						"referenceName": "py_fail_activity_logging",
						"type": "NotebookReference"
					},
					"snapshot": true,
					"conf": {
						"spark.dynamicAllocation.enabled": null,
						"spark.dynamicAllocation.minExecutors": null,
						"spark.dynamicAllocation.maxExecutors": null
					},
					"numExecutors": null
				}
			},
			{
				"name": "Process Users",
				"description": "Process the data stored in raw and add to standardised",
				"type": "SynapseNotebook",
				"dependsOn": [
					{
						"activity": "Copy AAD Users",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"notebook": {
						"referenceName": "entra_id_get_users",
						"type": "NotebookReference"
					},
					"snapshot": true
				}
			}
		],
		"annotations": []
	}
}