{
	"name": "data validation test",
	"properties": {
		"activities": [
			{
				"name": "data validation notebook",
				"type": "SynapseNotebook",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"notebook": {
						"referenceName": "data_validation_example",
						"type": "NotebookReference"
					},
					"parameters": {
						"source_dbtable": {
							"value": "load.SAP_HR_Leavers",
							"type": "string"
						}
					},
					"snapshot": true,
					"sparkPool": {
						"referenceName": "pinssynspodwpr",
						"type": "BigDataPoolReference"
					},
					"executorSize": "Small",
					"driverSize": "Small"
				}
			},
			{
				"name": "Set variable1",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "data validation notebook",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "shape_match",
					"value": {
						"value": "@activity('data validation notebook').output.status.Output.result.exitValue",
						"type": "Expression"
					}
				}
			},
			{
				"name": "Web1",
				"type": "WebActivity",
				"dependsOn": [
					{
						"activity": "Set variable1",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": {
						"value": "@concat('https://', pipeline().parameters.storage_account, '.blob.core.windows.net/odw-config/data_validation/data_validation_test', '.json')",
						"type": "Expression"
					},
					"connectVia": {
						"referenceName": "AutoResolveIntegrationRuntime",
						"type": "IntegrationRuntimeReference"
					},
					"method": "PUT",
					"headers": {
						"x-ms-blob-type": "BlockBlob",
						"x-ms-version": "2023-01-03"
					},
					"body": {
						"value": "@variables('shape_match')",
						"type": "Expression"
					},
					"linkedServices": [
						{
							"referenceName": "ls_storage",
							"type": "LinkedServiceReference"
						}
					],
					"authentication": {
						"type": "MSI",
						"resource": "https://storage.azure.com"
					}
				}
			}
		],
		"parameters": {
			"storage_account": {
				"type": "string",
				"defaultValue": "pinsstodwdevuks9h80mb"
			}
		},
		"variables": {
			"shape_match": {
				"type": "String"
			},
			"source_dbtable": {
				"type": "String"
			}
		},
		"folder": {
			"name": "data validation"
		},
		"annotations": []
	}
}