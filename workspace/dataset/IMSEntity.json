{
	"name": "IMSEntity",
	"properties": {
		"linkedServiceName": {
			"referenceName": "ls_storage",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"FileName": {
				"type": "string",
				"defaultValue": "IMS_Entity"
			}
		},
		"annotations": [],
		"type": "DelimitedText",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"fileName": "@dataset().FileName",
				"folderPath": {
					"value": "@concat('IMS', '/', formatDateTime(utcnow(), 'yyyy-MM-dd'))",
					"type": "Expression"
				},
				"fileSystem": "odw-raw"
			},
			"columnDelimiter": ",",
			"escapeChar": "\\",
			"firstRowAsHeader": true,
			"quoteChar": "\""
		},
		"schema": [
			{
				"name": "ID",
				"type": "String"
			},
			{
				"name": "case_reference",
				"type": "String"
			},
			{
				"name": "type",
				"type": "String"
			},
			{
				"name": "state",
				"type": "String"
			},
			{
				"name": "author",
				"type": "String"
			},
			{
				"name": "timestamp",
				"type": "String"
			},
			{
				"name": "comment",
				"type": "String"
			}
		]
	}
}