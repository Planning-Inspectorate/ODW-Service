{
	"name": "DaRT_LPA_Entity_Sink",
	"properties": {
		"linkedServiceName": {
			"referenceName": "ls_storage",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"FileName": {
				"type": "string",
				"defaultValue": "S62AViewCases.csv"
			}
		},
		"annotations": [],
		"type": "DelimitedText",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"fileName": {
					"value": "@dataset().FileName",
					"type": "Expression"
				},
				"folderPath": {
					"value": "@concat('archive/', 'Horizon', '/', formatDateTime(utcnow(), 'yyyy-MM-dd'))",
					"type": "Expression"
				},
				"fileSystem": "odw-raw"
			},
			"columnDelimiter": ",",
			"escapeChar": "\\",
			"firstRowAsHeader": true,
			"quoteChar": "\""
		},
		"schema": [
			{
				"name": "Name",
				"type": "String"
			},
			{
				"name": "CaseRef",
				"type": "String"
			},
			{
				"name": "CommentsDataID",
				"type": "String"
			},
			{
				"name": "CaseDataID",
				"type": "String"
			},
			{
				"name": "Description",
				"type": "String"
			}
		],
		"folder": {
			"name": ""
		}
	}
}