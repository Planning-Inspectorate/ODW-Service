				"source": [
					"import re\n",
					"\n",
					"file_path = \"abfss://datalab@pinsstodwdevuks.dfs.core.windows.net/ODW/Casework/Appeals/appeals-attribute-matrix.csv\"\n",
					"\n",
					"df = spark.read.option(\"header\", True).option(\"inferSchema\", True).csv(file_path)\n",
					"\n",
					"display(df)\n",
					"\n",
					"def to_camel_case(colname: str) -> str:\n",
					"    parts = re.split(r'\\s+', colname.strip())\n",
					"    return parts[0].lower() + ''.join(p.capitalize() for p in parts[1:])\n",
					"\n",
					"for colname in df.columns:\n",
					"    new_name = to_camel_case(colname)\n",
					"    df = df.withColumnRenamed(colname, new_name)\n",
					"\n",
					"df.write.mode(\"overwrite\").format(\"delta\").saveAsTable(\"odw_standardised_db.ref_appeal_attribute_matrix\")"
				],
				"execution_count": null
			}
