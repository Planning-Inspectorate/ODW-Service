				"source": [
					"from pyspark.sql import SparkSession\n",
					"spark = SparkSession.builder.getOrCreate()\n",
					"\n",
					"tables_list = []\n",
					"\n",
					"for db in db_list:\n",
					"    # filtering out only the HR tables in db\n",
					"    hr_tables = [f\"{db}.{table.name}\" for table in spark.catalog.listTables(db) if table.name.startswith('hr_')]\n",
					"    tables_list += hr_tables\n",
					"\n",
					"# adding remainder of the tables\n",
					"tables_list.append('odw_standardised_db.sap_hr_historic')\n",
					"tables_list.append('odw_curated_db.employee')\n",
					"tables_list.append('odw_harmonised_db.main_sourcesystem_fact')\n",
					"\n",
					"mssparkutils.notebook.exit(',,,'.join(tables_list))"
				],
				"execution_count": 8
			}
		]
