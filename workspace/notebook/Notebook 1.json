				"source": [
					"from pyspark.sql import SparkSession\n",
					"\n",
					"spark = SparkSession.builder.appName(\"DropTables\").getOrCreate()\n",
					"\n",
					"# 1. Get all tables starting with \"Loop_test\"\n",
					"tables = spark.sql(\"SHOW TABLES LIKE 'loop_test*'\").collect()\n",
					"\n",
					"# 2. Generate and execute DROP statements\n",
					"for table in tables:\n",
					"    table_name = f\"{table.database}.{table.tableName}\" if table.database else table.tableName\n",
					"    spark.sql(f\"DROP TABLE IF EXISTS {table_name} PURGE\")  # [1][4]"
				],
				"execution_count": 1
			}
		]
